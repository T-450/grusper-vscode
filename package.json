{
  "name": "grusper-theme",
  "displayName": "Grusper",
  "description": "A high-contrast dark theme focused on semantic color, not decoration.",
  "version": "1.1.0",
  "publisher": "T450",
  "icon": "logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/T-450/grusper-vscode"
  },
  "scripts": {
    "run": "code --extensionDevelopmentPath=.",
    "package": "vsce package --allow-missing-repository --no-dependencies",
    "publish": "vsce publish --allow-missing-repository --no-dependencies"
  },
  "devDependencies": {
    "@vscode/vsce": "^3.6.2"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Themes"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Grusper",
        "uiTheme": "vs-dark",
        "path": "./themes/grusper-color-theme.json"
      }
    ]
  }
}
